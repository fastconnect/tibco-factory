	<publishDate position="bottom" format="yyyy-MM-dd"/>
	<version position="bottom"/>

	<custom>
		<reflowSkin>
			<localResources>true</localResources>

			<absoluteResourceURL>${rootSiteDisplayURL}/</absoluteResourceURL>
			<protocolRelativeURLs>true</protocolRelativeURLs>

			<theme>site</theme>

			<highlightJs>true</highlightJs>
			<imgLightbox>true</imgLightbox>
			<bootstrapCSS>true</bootstrapCSS>
			<smoothScroll>true</smoothScroll>

			<titleTemplate>%2$s | %1$s</titleTemplate>

			<toc>false</toc>
			<tocTopMax>6</tocTopMax>
			<skinAttribution>false</skinAttribution>

			<brand>
				<name>
		          <![CDATA[
		          <style>.navbar .brand { padding: 5px 20px;}</style><a class="brand" href="${rootSiteDisplayURL}/index.html"><span class="color-highlight">FC</span> TIBCO Factory</a>
		          ]]>
				</name>
			</brand>
			<slogan>A Factory, not a framework.</slogan>

			<bottomNav maxSpan="9">
				<column>Documentation</column>
				<column>Plugins</column>
				<column>About</column>
			</bottomNav>
			<bottomDescription>
		        <![CDATA[
		          <i><span class="color-highlight">FC</span> TIBCO Factory</i>
		          is a modular, plugin-based, full-featured solution to improve
		          development & management of TIBCO applications.
		        ]]>
			</bottomDescription>

			<endContent>
				<script type="text/javascript" src="$resourcePath/js/highlight.min.js"></script>
				<script type="text/javascript" src="$resourcePath/js/jquery.imagemapster.min.js"></script>
				<script type="text/javascript" src="$resourcePath/js/custom.js"></script>
			</endContent>

			<pages>
				<index>
					<titleTemplate>FastConnect TIBCO Factory</titleTemplate>
					<markPageHeader>false</markPageHeader>
					<sections>
						<body />
						<thumbs>2</thumbs>
						<thumbs>2</thumbs>
					</sections>
				</index>
		        <installation>
					<sections>
						<body />
						<sidebar />
						<columns>3</columns>
					</sections>
		        </installation>
		        <configuration>
					<sections>
						<body />
						<sidebar />
						<columns>1</columns>
						<columns>1</columns>
						<thumbs>2</thumbs>
						<columns>2</columns>
					</sections>
		        </configuration>
		        <naming-conventions>
		        	<toc>top</toc>
					<sections>
						<body />
						<columns>2</columns>
						<thumbs>2</thumbs>
						<thumbs>2</thumbs>
						<columns>1</columns>
					</sections>
		        </naming-conventions>
			</pages>
		</reflowSkin>
	</custom>

